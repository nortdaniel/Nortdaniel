                                                                                <item name="elementTmpl" xsi:type="string">ui/form/element/textarea</item>
                                                                            </item>
                                                                            <item name="provider" xsi:type="string">checkoutProvider</item>
                                                                            <item name="dataScope" xsi:type="string">customCheckoutForm.comentarios</item>
                                                                            <item name="label" xsi:type="string">Comentarios</item>
                                                                            <item name="sortOrder" xsi:type="string">1</item>
                                                                            <item name="validation" xsi:type="array">
                                                                                <item name="required-entry" xsi:type="boolean">true</item>
                                                                            </item>
                                                                        </item>
                                                                        <item name="sexo" xsi:type="array">
                                                                            <item name="component" xsi:type="string">Magento_Ui/js/form/element/select</item>
                                                                            <item name="config" xsi:type="array">
                                                                                <item name="customScope" xsi:type="string">customCheckoutForm</item>
