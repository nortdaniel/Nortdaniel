                                                                                    <item name="label" xsi:type="string">Seleccione</item>
                                                                                    <item name="value" xsi:type="string"></item>
                                                                                </item>
                                                                                <item name="1" xsi:type="array">
                                                                                    <item name="label" xsi:type="string">Hombre</item>
                                                                                    <item name="value" xsi:type="string">hombre</item>
                                                                                </item>
                                                                                <item name="2" xsi:type="array">
                                                                                    <item name="label" xsi:type="string">Mujer</item>
                                                                                    <item name="value" xsi:type="string">mujer</item>
                                                                                </item>
                                                                            </item>
                                                                            <item name="provider" xsi:type="string">checkoutProvider</item>
                                                                            <item name="dataScope" xsi:type="string">customCheckoutForm.sexo</item>
                                                                            <item name="label" xsi:type="string">Sexo</item>
                                                                            <item name="sortOrder" xsi:type="string">2</item>
                                                                            <item name="validation" xsi:type="array">
                                                                                <item name="required-entry" xsi:type="boolean">true</item>
                                                                            </item>
                                                                        </item>
                                                                    </item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
